<h1 class="text-3xl font-bold mb-4">Statistics for <%= @team.name %></h1>

<div class="overflow-x-auto">
  <table class="min-w-full bg-white border-gray-200 shadow-md rounded-lg overflow-hidden">
    <thead class="bg-gray-200">
      <tr>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Player Name</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Points</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Rebounds</th>
        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Assists</th>
      </tr>
    </thead>
    <tbody class="divide-y divide-gray-200">
      <% @statistics.each do |statistic| %>
        <tr>
          <td class="px-6 py-4 whitespace-nowrap"><%= statistic.player.name %></td>
          <td class="px-6 py-4 whitespace-nowrap"><%= statistic.points %></td>
          <td class="px-6 py-4 whitespace-nowrap"><%= statistic.rebounds %></td>
          <td class="px-6 py-4 whitespace-nowrap"><%= statistic.assists %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= link_to "Back to Teams", teams_path, class: "mt-4 inline-block bg-blue-500 hover:bg-blue-600 text-white py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
